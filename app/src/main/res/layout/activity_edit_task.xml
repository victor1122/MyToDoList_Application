<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/editTask"
    android:clickable="true"
    tools:context="com.fpt.anhnht.assignment2_se61750_todolist.EditTask">

    <EditText
        android:id="@+id/editFromDate"
        android:layout_width="150dp"
        android:layout_height="44dp"
        android:layout_marginTop="38dp"
        android:ems="10"
        android:focusable="false"
        android:gravity="center_vertical|center_horizontal|center"
        android:hint="From Date"
        android:inputType="textPersonName"
        android:onClick="onClick"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editHeader"
        android:layout_marginLeft="24dp" />

    <EditText
        android:id="@+id/editToDate"
        android:layout_width="150dp"
        android:layout_height="44dp"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:focusable="false"
        android:gravity="center_vertical|center_horizontal|center"
        android:hint="To date"
        android:inputType="textPersonName"
        android:onClick="onClick"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editFromDate"
        android:layout_marginLeft="24dp" />

    <EditText
        android:id="@+id/editContent"
        android:layout_width="319dp"
        android:layout_height="90dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Content of remind"
        android:inputType="textMultiLine"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editToDate" />

    <Button
        android:id="@+id/editButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:focusable="false"
        android:onClick="onClick"
        android:text="Update"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/editSeek"
        app:layout_constraintVertical_bias="0.724" />

    <EditText
        android:id="@+id/editHeader"
        android:layout_width="337dp"
        android:layout_height="44dp"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal|center"
        android:hint="Name of the to do task"
        android:inputType="textPersonName"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/editSeek"
        android:layout_width="195dp"
        android:layout_height="33dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="35dp"
        android:max="100"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editContent" />

    <TextView
        android:id="@+id/percentSymbol"
        android:layout_width="54dp"
        android:layout_height="46dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="35dp"
        android:text="%"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editContent"
        app:layout_constraintLeft_toRightOf="@+id/editPercentCom"
        android:layout_marginLeft="8dp" />

    <EditText
        android:id="@+id/editPercentCom"
        android:layout_width="63dp"
        android:layout_height="52dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintLeft_toRightOf="@+id/editSeek"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@+id/editContent" />

    <EditText
        android:id="@+id/editfromTime"
        android:layout_width="150dp"
        android:layout_height="44dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="38dp"
        android:ems="10"
        android:focusable="false"
        android:gravity="center_horizontal"
        android:hint="From Time"
        android:inputType="time"
        android:onClick="onClick"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/editFromDate"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editHeader" />

    <EditText
        android:id="@+id/editToTime"
        android:layout_width="150dp"
        android:layout_height="44dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:focusable="false"
        android:gravity="center_horizontal"
        android:hint="To Time"
        android:inputType="time"
        android:onClick="onClick"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/editToDate"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editFromDate" />

</android.support.constraint.ConstraintLayout>
